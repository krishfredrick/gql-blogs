{
  "compilerOptions": {
    "rootDir": "./", // Adjust this to the root directory where all your TypeScript files are located
    "outDir": "./dist",
    "strict": true,
    "module": "commonjs",
    "target": "es6",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src/**/*",
    "codegen.ts" // Include the codegen.ts file explicitly if it's outside of src
  ]
}